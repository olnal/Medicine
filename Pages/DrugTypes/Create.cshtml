@page
@model Medicine.Pages.DrugTypes.CreateModel

@{
    ViewData["Title"] = "Додавання нового типу";
}

<h1>Додавання нового типу</h1>

<h4>Тип ліків</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DrugType.Type" class="control-label">Тип</label>
                <input asp-for="DrugType.Type" class="form-control" />
                <span asp-validation-for="DrugType.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
