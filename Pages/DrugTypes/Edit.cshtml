@page
@model Medicine.Pages.DrugTypes.EditModel

@{
    ViewData["Title"] = "Редагування";
}

<h1>Редагування</h1>

<h4></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DrugType.Id" />
            <div class="form-group">
                <label asp-for="DrugType.Type" class="control-label">Назва</label>
                <input asp-for="DrugType.Type" class="form-control" />
                <span asp-validation-for="DrugType.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary" /> | <a asp-page="./Index">Назад</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
